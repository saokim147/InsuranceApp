@model IEnumerable<CityDTO>
@using InsuranceWebApp.Data;

@if (!Model.Any())
{
    <div data-value=""
        class="search-option w-full cursor-pointer px-4 py-2 text-sm text-gray-800 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 dark:bg-neutral-900 dark:text-neutral-200 dark:hover:bg-neutral-800 dark:focus:bg-neutral-800">
        Không tìm thấy
    </div>
}
else
{
    @foreach (var item in Model)
    {
        <div class="search-option w-full cursor-pointer px-4 py-2 text-sm text-gray-800 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 dark:bg-neutral-900 dark:text-neutral-200 dark:hover:bg-neutral-800 dark:focus:bg-neutral-800"
            data-value="@item.CityId">
            @item.CityName
        </div>
    }
}
